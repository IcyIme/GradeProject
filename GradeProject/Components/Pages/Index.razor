@page "/index"

@inject NavigationManager NavigationManager

<body>
<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="text-center my-5 bgtext">
                    <img src="/img/logo2.png" alt="logo" width="250">
                </div>
                <div class="card shadow-lg">
                    <div class="m-5 text-center">
                        <div class="d-grid gap-2">
                            <RadzenButton Text="Prihlásiť sa" Click="@(args => RedirectToLogin())"/>
                            <RadzenButton Text="Registrovať sa" Click="@(args => RedirectToRegister())"/>
                        </div>
                    </div>
                </div>
                <p class="text-center bgtext">© @DateTime.Today.Year Grade - All Rights Reserved.</p>
            </div>
        </div>
    </div>
</section>
</body>

@code {
    private void RedirectToLogin()
    {
        NavigationManager.NavigateTo("Account/Login");
    }

    private void RedirectToRegister()
    {
        NavigationManager.NavigateTo("Account/Register");
    }
}